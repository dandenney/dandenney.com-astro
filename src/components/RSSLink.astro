---
interface Props {
  class?: string;
  showText?: boolean;
  size?: 'sm' | 'md' | 'lg';
}

const { 
  class: className = '', 
  showText = true, 
  size = 'md' 
} = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6'
};
---

<a 
  href="/rss.xml" 
  class={`rss-link inline-flex items-center text-red-700 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 transition-colors ${className}`}
  title="Subscribe to RSS feed"
  target="_blank"
  rel="noopener noreferrer"
>
  <svg 
    class={`${sizeClasses[size]} ${showText ? 'mr-2' : ''}`} 
    fill="currentColor" 
    viewBox="0 0 24 24" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248S0 22.546 0 20.752s1.456-3.248 3.252-3.248 3.251 1.454 3.251 3.248zM1.669 2.956V8.33c8.437 0 15.353 6.916 15.353 15.353h5.373c0-11.45-9.275-20.727-20.726-20.727zM1.669 11.24v5.373c4.541 0 8.271 3.73 8.271 8.271h5.373c0-7.525-6.119-13.644-13.644-13.644z"/>
  </svg>
  {showText && <span>RSS Feed</span>}
</a>