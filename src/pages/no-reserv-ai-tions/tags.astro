---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import toTitleCase from '../../helpers/toTitleCase.js'

const allReviews = await Astro.glob('../../content/reviews/*.md');
const tags = [...new Set(allReviews.map((review) => review.frontmatter.tags).flat())].sort();

---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="No ReservAItions Tags | Dan Denney" description="Reviews of food, music, and events with the help of AI" />
	</head>
	<body class="bg-slate-50 dark:bg-slate-900">
		<Header />
		<main class="bg-slate-50 relative shadow z-10 xl:flex dark:bg-slate-900 dark:text-slate-200" style="min-height: 90dvh;">  
      <section class="max-w-screen-2xl mx-auto p-4 tags xl:flex xl:gap-8">
        <figure class="hidden overflow-hidden xl:block xl:flex-shrink-0 xl:w-2/5">
          <img alt="Midjourney generated image of Anthony Bourdain in Nashville" class="object-cover" src="/no-reserv-ai-tions/ai-nthony-bourd-ai-n-portrait.webp" />	
        </figure>
        <div>
          <h2 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-slate-100 md:flex-shrink-0">No ReservAItions Tags</h2>
          <p class="mt-2 text-gray-600 dark:text-slate-100">Tagged reviews of food, music, and events with the help of AI</p>
          <nav class="has-links flex flex-wrap items-start mt-8 gap-x-8 gap-y-4">
            {tags.map((tag) => (
              <a class="md:text-2xl" href={`/no-reserv-ai-tions/${tag}`}>{toTitleCase(tag)}</a>
            ))}
          </nav>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>