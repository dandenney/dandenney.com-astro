---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import toTitleCase from '../helpers/toTitleCase.js'

const { city, state, tags, heroImage, heroAlt, summary, title } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={summary} />
	</head>
	<body class="bg-slate-50 dark:bg-slate-900">
		<Header />
		<main class="relative shadow z-10 dark:bg-slate-900 dark:text-slate-200">
			<article class="max-w-screen-2xl pt-4 xl:flex xl:gap-12 xl:items-start xl:justify-between xl:px-4">
				<figure class="bg-white max-w-2xl mx-auto pb-10 pt-4 px-4 shadow-md shadow-slate-10/20 xl:sticky xl:top-4 xl:flex-shrink-0">
					<img class="mx-auto" src={`/no-reserv-ai-tions/${heroImage}.webp`} alt={heroAlt} height="480" width="640" />
					<ul class="flex font-decorative justify-between  mt-4">
						<li>{city}{state && `, ${state}` }</li>
						<li class="has-links text-gray-300 dark:text-slate-100">
							{tags && tags.map((tag, index) => (
								<>
									{index > 0 ? 'â€¢ ' : ''}
									<a href={`/no-reserv-ai-tions/${tag}`}>{toTitleCase(tag)}</a>
								</>
							))}
						</li>
					</ul>
				</figure>
				<div class="max-w-2xl mx-auto">
					<header class="longform pt-8 px-8 xl:pt-0 xl:px-0">
						<h1 class="text-4xl font-bold leading-tight tracking-tight mb-4">{title}</h1>
					</header>
					<div class="longform pb-16 px-8 xl:px-0">
						<slot />
					</div>
				</div>
			</article>
		</main>
	</body>
</html>
